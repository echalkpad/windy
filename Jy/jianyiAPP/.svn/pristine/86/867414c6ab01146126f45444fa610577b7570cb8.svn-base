function StoreProductList(storeID) {
	var requestProduct = "storeId=" + storeID + "&pageIndex=1&pageSize=10";
	jyapp.getApi({
		method: 'store/storeproductlist',
		data: requestProduct,
		timeout: 10000,
		onsuccess: function(response) {
			var htmlProduct = "";
			//					if(response.code == 1 && response.data.total != 0){
			htmlProduct += "<p class=\"jy-li jy-navigate-right f12 weak\"><span style=\"background: rgb(38,204,114);\">订</span>预定</p>";
			htmlProduct += "<ul class=\"jkwd-ul\">";
			for (var i = 0; i < response.data.list.length; i++) {
				var product = response.data.list[i];
				htmlProduct += "	<li style=\"height: 70px;\">";
				htmlProduct += "		<div class=\"li-l\" style=\"height: 50px;\">";
				htmlProduct += "			<img src=\""+product.Src+"\" alt=\"\"  height=\"50px\"/>";
				htmlProduct += "		</div>";
				htmlProduct += "		<div class=\"li-r\">";
				htmlProduct += "			<h2 class=\"f13\">"+product.PackageName+"</h2>";
				htmlProduct += "			<h4><span class=\"sp1\">"+product.DiscountPrice+"</span><span class=\"sp2 f12 weak\">"+product.DiscountPrice+"</span><span class=\"sp3 weak f12\">已售 "+product.SaleCount+"</span></h4>";
				htmlProduct += "		</div>";
				htmlProduct += "	</li>";
			}
			htmlProduct += "</ul>";
			//					}
			document.getElementById('healthNetworkDetailProductId').innerHTML = htmlProduct;
			document.getElementById('healthNetworkDetailProductId').display = "none";
		},
		onerror: function(e) {
			console.log("StoreProductList:"+e);
		}
	});
}
