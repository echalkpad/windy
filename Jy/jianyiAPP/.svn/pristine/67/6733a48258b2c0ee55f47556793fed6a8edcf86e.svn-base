		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<link rel="stylesheet" href="../../../css/mui.min.css">
		<link rel="stylesheet" href="../../../css/common.css">
		<style type="text/css">
			.mui-content{
				background:none;
				padding-bottom:60px;
			}
			.plan-info{
				padding:0 15px;
				background:#fff;
			}
			.plan-info h2{
				font-size:16px;
				color:#333;
				line-height:30px;
			}
			.plan-info small{
				font-size:14px;
				display:block;
				color:#777;
				padding-bottom:5px;
			}
			.plan-info article{
				color:#777;
				line-height:24px;
				font-size: 14px;
			}
			.plan-info p{
				border-top:1px solid #f1f1f1;
				margin-top:8px;
				line-height:36px;
				margin-bottom:10px;
				padding:0 15px;
			}
			.plan-info del{
				font-size:16px;
				margin-right:20px;
			}
			.plan-info strong{
				font-weight:normal;
				font-size:16px;
				color:#F60404;
				margin-right:10px;
			}
			.mui-table-view{
				font-size:14px;
				color:#4A4A4A;
			}
			.mui-table-view:before,.mui-table-view-cell:after{
				background:#F1F1F1;
			}
			h3{
				height:1px;
				background:#ddd;
				margin:30px 0;
				text-align: center;
			}
			h3 span{
				font-size:14px;
				background:#f2f6f9;
				padding:0 8px;
				position: relative;
				top:-15px;
				color:#4A4A4A;
			}
			section p{
				padding:0 15px;
				font-size:14px;
				color:#666;
			}
			.fixbottom{
				width:100%;
				background:#fff;
				position: fixed;
				bottom:0;
				padding:5px 15px;
			}
			.fixbottom a{
				display:block;
				line-height:40px;
				text-align:center;
				color:#fff;
				border-radius:5px;
				background:#00b6f3;
				font-size:16px;
			}
		</style>
	</head>

	<body>
		<header class="mui-bar mui-bar-nav">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
