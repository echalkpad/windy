
document.addEventListener('plusready', function() {
//	mui.init();
	//初始化页面数据
	mainHealthy.initMainHealthy();
	var ws=plus.webview.currentWebview();
	ws.setPullToRefresh({support:true,
		height:"50px",
		range:"200px",
		contentdown:{
